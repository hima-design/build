/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "importHelpers": true,
      "target": "es2019",
      "module": "es2020",
      "lib": [
        "esnext.array",
        "es2018",
        "dom"
      ]
    }
  }
  